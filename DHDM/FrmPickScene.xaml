<Window x:Class="DHDM.FrmPickScene"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DHDM"
        mc:Ignorable="d"
        Title="Pick Scene" Height="310" Width="262">
    <Grid x:Name="Grid1" Height="Auto" Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Select the scene to open:" Width="Auto" Height="Auto" Margin="3" />
        <ListBox x:Name="lbScenes" Grid.Row="1" Height="240" SelectionChanged="lbScenes_SelectionChanged" >
        	
        </ListBox>
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
            <Button x:Name="btnOkay" Width="70" Height="25" Margin="3" Click="btnOkay_Click" >
                OK
            </Button>
            <Button x:Name="btnCancel" Width="70" Height="25" Margin="3" Click="btnCancel_Click" >
                Cancel
            </Button>
        </StackPanel>
    </Grid>
</Window>

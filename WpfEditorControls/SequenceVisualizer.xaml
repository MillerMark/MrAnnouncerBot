<UserControl x:Class="WpfEditorControls.SequenceVisualizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfEditorControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <TextBlock x:Name="tbSequenceLabel" Text="Sequence" Width="Auto" Height="Auto" TextAlignment="Center" >
            <TextBlock.LayoutTransform>
                <RotateTransform Angle="270"/>
            </TextBlock.LayoutTransform>
        </TextBlock>
        <Border BorderBrush="LightSteelBlue" BorderThickness="1" Padding="2" Margin="2" >
            <Canvas x:Name="cvsSequence">

            </Canvas>
        </Border>
    </DockPanel>
</UserControl>
